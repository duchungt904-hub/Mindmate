<script>
// VERSION 3.0 - å¤š Avatar æ”¯æŒ
console.log('Chat JS Version 3.0 - Multi-Avatar Support');

let chatHistory = [];
let currentAvatar = null;  // å½“å‰é€‰ä¸­çš„ Avatar
let allAvatars = [];        // æ‰€æœ‰ Avatar åˆ—è¡¨
let avatarImageUrl = '/static/images/default-avatar.png';
let currentAvatarId = null; // å½“å‰ Avatar ID

// é¡µé¢åŠ è½½æ—¶åˆå§‹åŒ–
async function init() {
    // ä» URL è·å– avatar_id å‚æ•°
    const urlParams = new URLSearchParams(window.location.search);
    const avatarIdParam = urlParams.get('avatar_id');
    
    // åŠ è½½æ‰€æœ‰ Avatar
    await loadAllAvatars();
    
    // é€‰æ‹©é»˜è®¤ Avatar
    if (avatarIdParam && allAvatars.find(a => a.id == avatarIdParam)) {
        currentAvatarId = parseInt(avatarIdParam);
    } else if (allAvatars.length > 0) {
        currentAvatarId = allAvatars[0].id;
    } else {
        // æ²¡æœ‰ Avatarï¼Œæç¤ºåˆ›å»º
        document.getElementById('avatarInfo').innerHTML = `
            <div style="text-align: center; width: 100%;">
                <p style="color: #e74c3c;">âš ï¸ è¯·å…ˆåˆ›å»ºä½ çš„ Avatarï¼</p>
                <a href="/avatar" class="btn-primary" style="display: inline-block; margin-top: 10px;">å»åˆ›å»º</a>
            </div>
        `;
        return;
    }
    
    // åŠ è½½å½“å‰ Avatar å’ŒèŠå¤©è®°å½•
    await loadCurrentAvatar();
    await loadChatHistory();
}

// åŠ è½½æ‰€æœ‰ Avatar
async function loadAllAvatars() {
    try {
        const response = await fetch('/api/avatar/list');
        const data = await response.json();
        
        if (data.success) {
            allAvatars = data.avatars;
            console.log('åŠ è½½äº†', allAvatars.length, 'ä¸ª Avatar');
        }
    } catch (error) {
        console.error('åŠ è½½ Avatar åˆ—è¡¨å¤±è´¥:', error);
    }
}

// åŠ è½½å½“å‰ Avatar
async function loadCurrentAvatar() {
    if (!currentAvatarId) return;
    
    try {
        const response = await fetch(`/api/avatar/${currentAvatarId}`);
        const data = await response.json();
        
        if (data.success) {
            currentAvatar = data.avatar;
            avatarImageUrl = calculateAvatarImage(currentAvatar);
            console.log('å½“å‰ Avatar:', currentAvatar);
            console.log('Avatar å›¾ç‰‡ URL:', avatarImageUrl);
            updateAvatarHeader();
        }
    } catch (error) {
        console.error('åŠ è½½ Avatar é…ç½®å¤±è´¥:', error);
    }
}

// è®¡ç®— Avatar å¤´åƒ URL
function calculateAvatarImage(avatar) {
    if (!avatar) {
        return '/static/images/default-avatar.png';
    }
    
    // å¦‚æœæ˜¯è‡ªå®šä¹‰å›¾ç‰‡ä¸”æœ‰è·¯å¾„
    if (avatar.appearance_type === 'custom' && avatar.custom_image_path) {
        let path = avatar.custom_image_path.trim();
        
        if (path.startsWith('http://') || path.startsWith('https://')) {
            return path;
        }
        
        if (path.startsWith('avatar_images/')) {
            path = 'static/uploads/' + path;
        } else if (path.startsWith('uploads/')) {
            path = 'static/' + path;
        } else if (!path.startsWith('static/')) {
            path = 'static/uploads/' + path;
        }
        
        if (!path.startsWith('/')) {
            path = '/' + path;
        }
        
        return path;
    }
    
    if (avatar.appearance_type === 'q_character') {
        return '/static/images/q-character-avatar.svg';
    }
    
    if (avatar.appearance_type === 'cute_animal') {
        return '/static/images/cute-animal-avatar.svg';
    }
    
    return '/static/images/default-avatar.png';
}

// æ›´æ–°å¤´éƒ¨ Avatar ä¿¡æ¯
function updateAvatarHeader() {
    if (!currentAvatar) return;
    
    const personaName = currentAvatar.avatar_name || 'AI ä¼™ä¼´';
    const personaDesc = currentAvatar.description || '';
    
    const imgElement = document.getElementById('avatarImage');
    if (imgElement && avatarImageUrl) {
        imgElement.src = avatarImageUrl;
    }
    
    const nameElement = document.getElementById('avatarName');
    if (nameElement) {
        nameElement.textContent = personaName;
    }
    
    const descElement = document.getElementById('avatarPersona');
    if (descElement) {
        descElement.textContent = personaDesc;
    }
}

// æ˜¾ç¤º Avatar é€‰æ‹©å™¨
function showAvatarSelector() {
    const selector = document.getElementById('avatarSelector');
    const listContainer = document.getElementById('avatarList');
    
    // æ¸²æŸ“ Avatar åˆ—è¡¨
    listContainer.innerHTML = allAvatars.map(avatar => `
        <div class="avatar-option ${avatar.id === currentAvatarId ? 'active' : ''}" 
             onclick="switchAvatar(${avatar.id})">
            <img src="${calculateAvatarImage(avatar)}" alt="${avatar.avatar_name}" class="avatar-option-image">
            <div class="avatar-option-info">
                <h4>${avatar.avatar_name}</h4>
                <p>${avatar.persona_name}</p>
            </div>
        </div>
    `).join('');
    
    selector.style.display = 'flex';
}

// å…³é—­ Avatar é€‰æ‹©å™¨
function closeAvatarSelector() {
    document.getElementById('avatarSelector').style.display = 'none';
}

// åˆ‡æ¢ Avatar
async function switchAvatar(avatarId) {
    if (avatarId === currentAvatarId) {
        closeAvatarSelector();
        return;
    }
    
    currentAvatarId = avatarId;
    await loadCurrentAvatar();
    await loadChatHistory();
    closeAvatarSelector();
    
    // æ›´æ–° URL
    const newUrl = `/chat?avatar_id=${avatarId}`;
    window.history.pushState({}, '', newUrl);
}

// åŠ è½½èŠå¤©å†å²
async function loadChatHistory() {
    if (!currentAvatarId) return;
    
    try {
        const response = await fetch(`/api/chat/history?avatar_id=${currentAvatarId}&limit=50`);
        const data = await response.json();
        
        if (data.success) {
            chatHistory = data.history;
            renderMessages();
        }
    } catch (error) {
        console.error('åŠ è½½èŠå¤©å†å²å¤±è´¥:', error);
    }
}
