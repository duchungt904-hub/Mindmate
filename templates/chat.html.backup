        }
        
        console.log('ä½¿ç”¨è‡ªå®šä¹‰å›¾ç‰‡:', path);
        return path;
    }
    
    // å¦‚æœæ˜¯ Q ç‰ˆå¤´åƒç±»å‹
    if (avatarConfig.appearance_type === 'q_character') {
        console.log('ä½¿ç”¨ Q ç‰ˆå¤´åƒ');
        return '/static/images/q-character-avatar.svg';
    }
    
    // å¦‚æœæ˜¯å¯çˆ±åŠ¨ç‰©ç±»å‹
    if (avatarConfig.appearance_type === 'cute_animal') {
        console.log('ä½¿ç”¨å¯çˆ±åŠ¨ç‰©å¤´åƒ');
        return '/static/images/cute-animal-avatar.svg';
    }
    
    console.log('ä½¿ç”¨é»˜è®¤å›¾ç‰‡');
    return '/static/images/default-avatar.png';
}

// æ›´æ–°å¤´éƒ¨ Avatar ä¿¡æ¯
function updateAvatarHeader() {
    if (!avatarConfig) return;
    
    const personaName = avatarConfig.persona_name || 'AI ä¼™ä¼´';
    const personaDesc = avatarConfig.description || '';
    
    const imgElement = document.getElementById('avatarImage');
    if (imgElement && avatarImageUrl) {
        imgElement.src = avatarImageUrl;
    }
    
    const nameElement = document.getElementById('avatarName');
    if (nameElement) {
        nameElement.textContent = personaName;
    }
    
    const descElement = document.getElementById('avatarPersona');
    if (descElement) {
        descElement.textContent = personaDesc;
    }
}

// åŠ è½½èŠå¤©å†å²
async function loadChatHistory() {
    try {
        const response = await fetch('/api/chat/history?limit=50');
        const data = await response.json();
        
        if (data.success) {
            chatHistory = data.history;
            renderMessages();
        }
    } catch (error) {
        console.error('åŠ è½½èŠå¤©å†å²å¤±è´¥:', error);
    }
}

function renderMessages() {
    const container = document.getElementById('chatMessages');
    
    container.innerHTML = chatHistory.map(msg => {
        const isUser = msg.sender === 'user';
        const time = new Date(msg.timestamp).toLocaleTimeString('zh-CN', { 
            hour: '2-digit', 
            minute: '2-digit' 
        });
        
        if (isUser) {
            // ç”¨æˆ·æ¶ˆæ¯ï¼šå³å¯¹é½ï¼Œä¸æ˜¾ç¤ºå¤´åƒ
            return `
                <div class="message user-message">
                    <div class="message-content">
                        ${msg.isTyping ? msg.message : `<p>${escapeHtml(msg.message)}</p>`}
                        ${!msg.isTyping ? `<span class="timestamp">${time}</span>` : ''}
                    </div>
                </div>
            `;
        } else {
            // AI æ¶ˆæ¯ï¼šå·¦å¯¹é½ï¼Œå…ˆå¤´åƒåå†…å®¹
            return `
                <div class="message ai-message">
                    <img src="${avatarImageUrl}" alt="Avatar" class="message-avatar">
                    <div class="message-content">
                        ${msg.isTyping ? msg.message : `<p>${escapeHtml(msg.message)}</p>`}
                        ${!msg.isTyping ? `<span class="timestamp">${time}</span>` : ''}
                    </div>
                </div>
            `;
        }
    }).join('');
    
    // æ»šåŠ¨åˆ°åº•éƒ¨
    setTimeout(() => {
        container.scrollTop = container.scrollHeight;
    }, 100);
}

// å‘é€æ¶ˆæ¯
document.getElementById('chatForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const input = document.getElementById('messageInput');
    const message = input.value.trim();
    
    if (!message) return;
    
    // æ¸…ç©ºè¾“å…¥æ¡†
    input.value = '';
    
    // æ·»åŠ ç”¨æˆ·æ¶ˆæ¯åˆ°ç•Œé¢
    chatHistory.push({
        sender: 'user',
        message: message,
        timestamp: new Date().toISOString()
    });
    renderMessages();
    
    // æ˜¾ç¤ºåŠ è½½çŠ¶æ€ï¼ˆæ‰“å­—æŒ‡ç¤ºå™¨ï¼‰
    const loadingMsg = {
        sender: 'ai',
        message: '<div class="typing-indicator"><span></span><span></span><span></span></div>',
        timestamp: new Date().toISOString(),
        isTyping: true
    };
    chatHistory.push(loadingMsg);
    renderMessages();
    
    try {
        const response = await fetch('/api/chat/send', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ message })
        });
        
        const data = await response.json();
        
        // ç§»é™¤åŠ è½½æ¶ˆæ¯
        chatHistory.pop();
        
        if (data.success) {
            // æ·»åŠ  AI å›å¤
            chatHistory.push({
                sender: 'ai',
                message: data.ai_message,
                timestamp: new Date().toISOString()
            });
        } else {
            // æ˜¾ç¤ºé”™è¯¯
            chatHistory.push({
                sender: 'ai',
                message: 'æŠ±æ­‰ï¼Œæˆ‘ç°åœ¨æ— æ³•å›å¤ã€‚è¯·ç¨åå†è¯•ã€‚',
                timestamp: new Date().toISOString()
            });
            
            if (data.error && data.error.includes('Avatar')) {
                alert('è¯·å…ˆé…ç½®æ‚¨çš„ Avatarï¼');
                window.location.href = '/avatar';
            }
        }
        
        renderMessages();
    } catch (error) {
        chatHistory.pop();
        chatHistory.push({
            sender: 'ai',
            message: 'ç½‘ç»œé”™è¯¯ï¼Œè¯·é‡è¯•ã€‚',
            timestamp: new Date().toISOString()
        });
        renderMessages();
    }
});

function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
}

// åˆå§‹åŒ–åŠ è½½ - å…ˆåŠ è½½ Profile å’Œ Avatarï¼Œå†åŠ è½½èŠå¤©å†å²
async function init() {
    await loadUserProfile();   // åŠ è½½ç”¨æˆ· Profile
    await loadAvatarConfig();  // ç­‰å¾… Avatar é…ç½®åŠ è½½å®Œæˆ
    await loadChatHistory();   // ç„¶ååŠ è½½èŠå¤©å†å²
}

init();
</script>
